@model LigaWeb.Data.Entities.Club

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <p><strong>There were some issues with your submission:</strong></p>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname" class="control-label"></label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfFoundation" class="control-label">Year of Foundation</label>
                <input asp-for="YearOfFoundation" class="form-control" />
                <span asp-validation-for="YearOfFoundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach" class="control-label"></label>
                <input asp-for="Coach" class="form-control" />
                <span asp-validation-for="Coach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamEmblem" class="control-label"> Team Emblem</label>
                <input asp-for="TeamEmblem" class="form-control" />
                <span asp-validation-for="TeamEmblem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumId" class="control-label">Stadium</label>
                <select asp-for="StadiumId" class="form-control" asp-items="ViewBag.StadiumId"></select>
                <span asp-validation-for="StadiumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



