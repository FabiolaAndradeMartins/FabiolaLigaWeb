@model LigaWeb.Data.Entities.Club

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <p><strong>There were some issues with your submission:</strong></p>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div>
    <h4>Club</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nickname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nickname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfFoundation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearOfFoundation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Coach)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coach)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeamEmblem)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.TeamEmblem" alt="@Model.Name Emblem" style="width: 100px; height: auto;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stadium)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stadium.Name)
        </dd>
        <dt class="col-sm-2">
            Stadium Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stadium.Address) <!-- Adiciona o endereço do estádio -->
        </dd>
        <dt class="col-sm-2">
            Players
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Index" asp-controller="Players" asp-route-clubId="@Model.Id" class="btn btn-info">View Players</a>
        </dd>
    </dl>
</div>
<div>
    
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    }
    
    <a href="@Url.Action("Index", "Home")" class="btn btn-warning">Back to Home</a>
    
</div>
